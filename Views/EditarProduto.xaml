<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppMinhasCompras.Views.EditarProduto">

    <StackLayout Padding="20" VerticalOptions="FillAndExpand">

        <Label Text="Editar Produto"
               FontSize="24"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               TextColor="White"/>

        <Entry x:Name="txtDescricao" Placeholder="Descrição do Produto"/>
        <Entry x:Name="txtQuantidade" Placeholder="Quantidade" Keyboard="Numeric"/>
        <Entry x:Name="txtPreco" Placeholder="Preço" Keyboard="Numeric"/>

        <StackLayout Orientation="Vertical" HorizontalOptions="Center" Spacing="10">
            <Button Text="Salvar Alterações"
                    Clicked="OnSalvarAlteracoes"
                    BackgroundColor="#FFC0CB"
                    TextColor="White"
                    FontAttributes="Bold"
                    CornerRadius="20"
                    Padding="10"
                    WidthRequest="200"/>

            <Button Text="Excluir Produto"
                    Clicked="OnExcluirProduto"
                    BackgroundColor="Red"
                    TextColor="White"
                    FontAttributes="Bold"
                    CornerRadius="20"
                    Padding="10"
                    WidthRequest="200"/>
        </StackLayout>

    </StackLayout>
</ContentPage>